{
  "task": {
    "train_data": {
      "input_path": "local/outputs/tf_examples.tfrecord",
      "global_batch_size": 32,
      "seq_length": 40
    },
    "validation_data": {
      "input_path": "local/outputs/tf_examples.tfrecord",
      "global_batch_size": 32,
      "seq_length": 40
    },
    "model": {
      "cls_heads": [
        {
          "inner_dim": 12
